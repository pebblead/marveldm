<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_personaje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.edu.itculiacan.marvel.DetallePersonaje">

    <ImageView
        android:id="@+id/imgPersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignLeft="@+id/txtNombre"
        android:layout_alignStart="@+id/txtNombre"
        android:layout_alignRight="@+id/txtNombre"
        android:layout_alignEnd="@+id/txtNombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nombre"
        android:focusable="false"
        android:ems="10"
        android:id="@+id/txtNombre"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/scrollV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgPersonaje"
        android:layout_alignStart="@+id/imgPersonaje"
        android:layout_below="@+id/imgPersonaje"
        android:layout_above="@+id/txtNComics"
        android:layout_alignRight="@+id/imgPersonaje"
        android:layout_alignEnd="@+id/imgPersonaje">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/txtNComics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="#Comics"
        android:focusable="false"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/scrollV"
        android:layout_alignStart="@+id/scrollV" />

    <EditText
        android:id="@+id/txtMultiDes"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/scrollV"
        android:layout_alignStart="@+id/scrollV"
        android:layout_below="@+id/imgPersonaje"
        android:ems="10"
        android:inputType="textMultiLine"
        android:focusable="false"
        android:layout_alignBottom="@+id/scrollV" />

</RelativeLayout>
